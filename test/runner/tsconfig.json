{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../../test_compiled",
    "baseUrl": ".",
    "paths": {
      "*": [
        "../../node_modules/*",
        "../../src/types/*"
      ]
    }
  },
  "include": [
    "../../test/**/*.ts",
  ]
}
